doctype html
html
  head
    title Hospital Booking System
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css")
    script(src="https://code.jquery.com/jquery-3.6.0.min.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js")
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container
        a.navbar-brand(href="/services") Hospital Booking
        ul.navbar-nav.ml-auto
          // Links for non-authenticated users
          if !isAuthenticated
            li.nav-item
              a.nav-link(href="/auth/login") Login
            li.nav-item
              a.nav-link(href="/auth/register") Register

          // Links for authenticated users
          if isAuthenticated
            li.nav-item
              a.nav-link(href="/services") Services
            li.nav-item
              a.nav-link(href="/bookings") My Bookings
            li.nav-item
              form(method="post", action="/auth/logout").d-inline
                input(type="hidden", name="_csrf", value=csrfToken)
                button.btn.btn-link.nav-link(type="submit") Logout

    // Display success messages
    if query && query.message
      .alert.alert-success.text-center(role="alert") #{query.message}

    block content

    footer.text-center.mt-5.py-4.bg-light
      p &copy; 2025 Hospital Booking System