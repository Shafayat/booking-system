
extends layout

block content
    .container.mt-5
        h1.text-center.my-3 Hospitals
        .row.justify-content-center.mt-4
            if hospitals && hospitals.length
                .row.justify-content-center
                    each hospital in hospitals
                        .col-md-6.mb-4
                            .card.shadow-sm
                                .card-body
                                    a(href=`/hospitals/${hospital.id}/services`, class='hospital-link')
                                        h3.card-title #{hospital.name}
                                        p.text-muted #{hospital.address}
            else
                p.text-center.text-muted No hospitals available at the moment.