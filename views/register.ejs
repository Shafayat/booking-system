<% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
<% } %>
<div class="container mt-5">
    <h2>Register</h2>
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <form id="registerForm" method="POST" action="/api/auth/register">
        <div class="form-group mb-2">
            <label for="username">Email</label>
            <input type="email" class="form-control" name="username" id="username" required autocomplete="username" value="<%= username || '' %>">
        </div>
        <div class="form-group mb-2">
            <label for="password">Password</label>
            <input type="password" class="form-control" name="password" id="password" required autocomplete="new-password">
            <small class="form-text text-muted">
                Minimum 8 chars: uppercase, lowercase, number, and symbol.
            </small>
        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button type="submit" class="btn btn-primary">Register</button>
        <a href="/login" class="btn btn-link">Login</a>
    </form>
</div>
