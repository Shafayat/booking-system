<h1>My Booked Services</h1>
<% if (!bookings.length) { %>
    <p>No services booked yet.</p>
<% } else { %>
    <ul class="list-group">
        <% bookings.forEach(function(booking) { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <b><%= booking.Service.name %></b>
                    <div><%= booking.Service.description %></div>
                    <div class="text-muted">At <%= booking.Service.Hospital.name %></div>
                    <div class="text-muted">Booked for: <%= booking.bookingDate.toLocaleDateString() %></div>
                    <span class="badge bg-success"><%= booking.status %></span>
                </div>
                <form action="/booking/<%= booking.id %>/remove" method="post" class="mb-0">
                    <button class="btn btn-danger btn-sm" type="submit" onclick="return confirm('Are you sure you want to remove this booking?')">Remove</button>
                </form>
            </li>
        <% }) %>
    </ul>
<% } %>
